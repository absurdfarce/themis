<configuration debug="false">
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>validator.log</file>
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="FILE" />
    </root>
</configuration>